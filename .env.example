# Database
DATABASE_URI=mongodb://localhost:27017/eco_app
# or PostgreSQL: postgresql://user:password@localhost:5432/eco_app

# Payload CMS
PAYLOAD_SECRET=your-secret-key-here
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3000

# Next.js
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Stripe (Get from https://dashboard.stripe.com/test/apikeys)
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx

# Stripe Webhooks (Get from Stripe CLI or Dashboard)
# For local development: Run `stripe listen --forward-to localhost:3000/api/stripe/webhooks`
# Copy the webhook signing secret from the output
STRIPE_WEBHOOKS_SIGNING_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxx

# Email (SMTP Configuration)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM_EMAIL=noreply@moon.co
SMTP_FROM_NAME=Moon co.

# Telegram Notification
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_GROUP_ID=-100xxxxxxxx

# Vercel Blob Storage (Optional)
BLOB_READ_WRITE_TOKEN=vercel_blob_xxxxxxxxxxxxx
BASE_URL_BLOB=https://xxxxxxxxxxxxx.public.blob.vercel-storage.com

# S3 Storage (Alternative to Vercel Blob)
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=xxxxxxxxxxxxx
# S3_SECRET_ACCESS_KEY=xxxxxxxxxxxxx

# Other
NODE_ENV=production